{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "error"
			},
			"correctness": {
				"noConstAssign": "error",
				"noGlobalObjectCalls": "error",
				"noInvalidUseBeforeDeclaration": "error",
				"noUndeclaredVariables": "error",
				"noUnusedVariables": "error"
			},
			"suspicious": {
				"noFallthroughSwitchClause": "error",
				"noImplicitAnyLet": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
